{
  "name"       : "mibexx/appgenerator",
  "description": "Generate php-application",
  "authors"    : [
    {
      "name" : "Mike Bertram",
      "email": "contact@mibexx.de"
    }
  ],
  "require"    : {
    "php"            : ">=5.6",
    "symfony/console": ">=3.2"
  },
  "require-dev": {
    "phpunit/phpunit": "5.7.*"
  },
  "autoload"   : {
    "psr-4"                : {
      "mibexx\\AppGenerator\\"      : "src",
      "mibexx\\AppGenerator\\Test\\": "tests"
    },
    "exclude-from-classmap": [
      "/tests/"
    ]
  },
  "bin"        : [
    "bin/appgen"
  ]
}